@model IEnumerable<ViajesUTP.Models.Empresas>

@{
    ViewBag.Title = "ListaEmpresas";
    Layout = "~/Views/Shared/ViewPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VerListaEmpresas</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-dark mt-5">
                    <thead>
                     <tr>
                         <th>Id</th>
                         <th>Nombre</th>
                         <th>Direccion</th>
                         <th>Ruc</th>
                         <th>Buses</th>
                     </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id_empresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Empresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ruc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CantidadBuses)
                        </td>
                        <td></td>

                        <td>
                            @Html.ActionLink("Modificar", "ModificaEmpresa", new { cod = item.id_empresa })
                            @Html.ActionLink("Eliminar", "EliminarEmpresa", new { em = item.id_empresa })
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</body>
</html>
